<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24"
    android:tint="?attr/colorOnSurface">
    
    <!-- Person's head -->
    <path
        android:fillColor="#FF6B35"
        android:pathData="M12,4
                         a2,2 0 1,1 0,4
                         a2,2 0 1,1 0,-4z"/>
    
    <!-- Person's body -->
    <path
        android:fillColor="#FF6B35"
        android:pathData="M12,8
                         L12,16
                         M10,10
                         L14,10"/>
        android:strokeWidth="2"
        android:strokeColor="#FF6B35"
        android:strokeLineCap="round"/>
    
    <!-- Left arm -->
    <path
        android:fillColor="@android:color/transparent"
        android:pathData="M10,10
                         L8,12
                         L9,14"/>
        android:strokeWidth="2"
        android:strokeColor="#FF6B35"
        android:strokeLineCap="round"/>
    
    <!-- Right arm -->
    <path
        android:fillColor="@android:color/transparent"
        android:pathData="M14,10
                         L16,12
                         L15,14"/>
        android:strokeWidth="2"
        android:strokeColor="#FF6B35"
        android:strokeLineCap="round"/>
    
    <!-- Left leg (standing) -->
    <path
        android:fillColor="@android:color/transparent"
        android:pathData="M11,16
                         L10,20
                         L9,22"/>
        android:strokeWidth="2"
        android:strokeColor="#FF6B35"
        android:strokeLineCap="round"/>
    
    <!-- Right leg (lifted high - knee up) -->
    <path
        android:fillColor="@android:color/transparent"
        android:pathData="M13,16
                         L14,12
                         L15,10"/>
        android:strokeWidth="3"
        android:strokeColor="#FFD700"
        android:strokeLineCap="round"/>
    
    <!-- Motion lines to show movement -->
    <path
        android:fillColor="@android:color/transparent"
        android:pathData="M16,10
                         L18,8
                         M17,11
                         L19,9
                         M16,12
                         L18,10"/>
        android:strokeWidth="1"
        android:strokeColor="#FFD700"
        android:strokeLineCap="round"/>
    
</vector> 