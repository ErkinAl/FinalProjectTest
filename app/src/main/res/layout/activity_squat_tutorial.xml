<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_friendly_background">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back"
        app:tint="#2E7D32" />

    <!-- Title -->
    <TextView
        android:id="@+id/tutorialTitle"
        android:layout_width="389dp"
        android:layout_height="89dp"
        android:layout_below="@id/backButton"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/play_button_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="12dp"
        android:text="🏋️ Squat Exercise! 🏋️"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tutorialTitle"
        android:layout_above="@+id/startButtonContainer"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Squat Demo Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎬 Watch the Demo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <!-- Squat Demo - Square display -->
                    <ImageView
                        android:id="@+id/tutorialGif"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_squat"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Instructions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📋 Step-by-Step Instructions"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. 🧍 Stand with feet shoulder-width apart, arms at your sides"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#E3F2FD"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. ⬇️ Lower your body by bending your hips and knees"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#E8F5E8"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. ⬆️ Return to standing position (counts as 1 rep!)"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#FFF3E0"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. 🎯 Complete 15 squats to finish and earn 25 XP!"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#F3E5F5"
                        android:padding="12dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 Pro Tips for Success"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📱 Make sure your upper body is visible in the camera"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏋️ Keep your back straight and chest up during the movement"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⬇️ Go down slowly and control the movement"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⬆️ Return to standing position to complete each rep"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎯 Stand at a comfortable distance from your device"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Start Button Container -->
    <LinearLayout
        android:id="@+id/startButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#E0E0E0">

        <Button
            android:id="@+id/startExerciseButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="🚀 Start Squat Exercise!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/play_button_background"
            android:elevation="6dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</RelativeLayout> 