<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_friendly_background">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back"
        app:tint="#2E7D32" />

    <!-- Title -->
    <TextView
        android:id="@+id/tutorialTitle"
        android:layout_width="389dp"
        android:layout_height="89dp"
        android:layout_below="@id/backButton"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/play_button_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="12dp"
        android:text="ðŸ¤¸ Side Reach Exercise! ðŸ¤¸"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tutorialTitle"
        android:layout_above="@+id/startButtonContainer"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Side Reach Demo Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¬ Watch the Demo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <!-- Side Reach Demo - Square display -->
                    <ImageView
                        android:id="@+id/sideReachGifView"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_side_reach"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Instructions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Step-by-Step Instructions"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. ðŸ§ Stand straight with feet shoulder-width apart"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#E3F2FD"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. ðŸ¤¸ Bend to the left and reach your right arm over your head"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#E8F5E8"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. ðŸ”„ Return to center, then bend right and reach left arm over"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#FFF3E0"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. ðŸŽ¯ Complete 20 side reaches to finish!"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:background="#F3E5F5"
                        android:padding="12dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Pro Tips for Success"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“± Make sure your whole body is visible in the camera"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤¸ Bend your torso to each side while reaching with your arm"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“± Keep your phone steady and at chest level"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ‰ Keep a smooth rhythm and stretch to each side!"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Goal Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FF9800">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Goal: Complete 20 Side Reaches!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="16dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Start Button Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/startButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#4CAF50">

        <Button
            android:id="@+id/startExerciseButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:text="ðŸš€ Start Exercise Now!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:elevation="0dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout> 